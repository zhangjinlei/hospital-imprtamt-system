<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
<constant name="struts.objectFactory" value="spring" />
<package name="user" extends="struts-default">
	<action name="login" class="LoginAction">
		<result name="success">/user/index.jsp</result>
		<result name="fail">/user/loginerror.jsp</result>
	</action>
	<action name="register" class="RegisterAction">
		<result name="success">/user/login.jsp</result>
	</action>
	<action name="count" class="CountAction">
		<result name="success">/user/show.jsp</result>
</action>
</package>
</struts>  

  
